<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailsFragment">

    <ImageView
        android:id="@+id/icon_detail_image"
        android:src="@drawable/ic_launcher_foreground"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/id_detail_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        app:layout_constraintLeft_toRightOf="@id/icon_detail_image"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/name_detail_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ぽけもん"
        app:layout_constraintLeft_toRightOf="@id/icon_detail_image"
        app:layout_constraintTop_toBottomOf="@id/id_detail_text" />

    <TextView
        android:id="@+id/flavor_detail_text"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="長い文章長い文章"
        app:layout_constraintLeft_toRightOf="@id/icon_detail_image"
        app:layout_constraintTop_toBottomOf="@id/name_detail_text" />

</androidx.constraintlayout.widget.ConstraintLayout>